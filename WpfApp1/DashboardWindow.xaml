<Window x:Class="WpfApp1.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource AppBackground}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- main -->
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <Border Grid.Column="0" Background="{StaticResource SidebarBackground}">
            <StackPanel>

                <!-- user header -->
                <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,24,0,16">
                    <Ellipse Width="32" Height="32" Fill="{StaticResource AccentBrush}"/>
                    <TextBlock x:Name="UserNameText"
                     Text="Full Name"
                     Foreground="{StaticResource SidebarText}"
                     FontSize="16" FontWeight="SemiBold"
                     Margin="8,0,0,0"
                     VerticalAlignment="Center"/>
                    <TextBlock Text="▼"
                     Foreground="{StaticResource SidebarText}"
                     Margin="4,0,0,0"
                     VerticalAlignment="Center"/>
                </StackPanel>

                <!-- nav items -->
                <StackPanel>
                    <Button x:Name="DashboardBtn"
                  Style="{StaticResource NavButtonStyle}"
                  Tag="Selected"
                  Click="DashboardButton_Click">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="🏠" FontSize="16"/>
                            <TextBlock Text=" Dashboard" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="ManageUsersBtn"
                  Style="{StaticResource NavButtonStyle}"
                  Click="ManageUsersButton_Click">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="👥" FontSize="16"/>
                            <TextBlock Text=" Manage Users" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="PatientsBtn"
                  Style="{StaticResource NavButtonStyle}"
                  Click="PatientsButton_Click">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="🧑‍⚕️" FontSize="16"/>
                            <TextBlock Text=" Patients" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="MedicineBtn"
                  Style="{StaticResource NavButtonStyle}"
                  Click="MedicineButton_Click">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="💊" FontSize="16"/>
                            <TextBlock Text=" Medicine" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>

                    <!-- add more nav as needed -->
                </StackPanel>

            </StackPanel>
        </Border>

        <!-- MAIN CONTENT: 2×3 mockup cards -->
        <ScrollViewer Grid.Column="1">
            <UniformGrid Rows="2" Columns="3" Margin="24" HorizontalAlignment="Center" VerticalAlignment="Top">

                <!-- Medicines -->
                <Border Background="#27AE60" CornerRadius="8" Margin="8" Padding="16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Medicines"
                       Foreground="White"
                       FontSize="16" FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="1" Text="Report"
                       Foreground="White" Opacity="0.8"
                       FontSize="12"/>

                        <TextBlock Grid.Column="1" Text="💼"
                       Foreground="White" FontSize="20"
                       HorizontalAlignment="Right"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="3"
                       Foreground="White"
                       FontSize="24" FontWeight="Bold"
                       HorizontalAlignment="Right"/>
                    </Grid>
                </Border>

                <!-- Sales Of Day -->
                <Border Background="#2980B9" CornerRadius="8" Margin="8" Padding="16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Sales Of Day"
                       Foreground="White"
                       FontSize="16" FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="1" Text="Report"
                       Foreground="White" Opacity="0.8"
                       FontSize="12"/>

                        <TextBlock Grid.Column="1" Text="📊"
                       Foreground="White" FontSize="20"
                       HorizontalAlignment="Right"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="3800"
                       Foreground="White"
                       FontSize="24" FontWeight="Bold"
                       HorizontalAlignment="Right"/>
                    </Grid>
                </Border>

                <!-- Sales Of Month -->
                <Border Background="#2ECC71" CornerRadius="8" Margin="8" Padding="16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Sales Of Month"
                       Foreground="White"
                       FontSize="16" FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="1" Text="Report"
                       Foreground="White" Opacity="0.8"
                       FontSize="12"/>

                        <TextBlock Grid.Column="1" Text="📈"
                       Foreground="White" FontSize="20"
                       HorizontalAlignment="Right"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="5400"
                       Foreground="White"
                       FontSize="24" FontWeight="Bold"
                       HorizontalAlignment="Right"/>
                    </Grid>
                </Border>

                <!-- Stock Shortage -->
                <Border Background="#F39C12" CornerRadius="8" Margin="8" Padding="16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Stock Shortage"
                       Foreground="White"
                       FontSize="16" FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="1" Text="Report"
                       Foreground="White" Opacity="0.8"
                       FontSize="12"/>

                        <TextBlock Grid.Column="1" Text="⚠️"
                       Foreground="White" FontSize="20"
                       HorizontalAlignment="Right"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="2"
                       Foreground="White"
                       FontSize="24" FontWeight="Bold"
                       HorizontalAlignment="Right"/>
                    </Grid>
                </Border>

                <!-- Expired Products -->
                <Border Background="#9B59B6" CornerRadius="8" Margin="8" Padding="16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Expired Products"
                       Foreground="White"
                       FontSize="16" FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="1" Text="Report"
                       Foreground="White" Opacity="0.8"
                       FontSize="12"/>

                        <TextBlock Grid.Column="1" Text="🚫"
                       Foreground="White" FontSize="20"
                       HorizontalAlignment="Right"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="1"
                       Foreground="White"
                       FontSize="24" FontWeight="Bold"
                       HorizontalAlignment="Right"/>
                    </Grid>
                </Border>

                <!-- Near Expiry -->
                <Border Background="#16A085" CornerRadius="8" Margin="8" Padding="16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Near Expiry"
                       Foreground="White"
                       FontSize="16" FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="1" Text="Report"
                       Foreground="White" Opacity="0.8"
                       FontSize="12"/>

                        <TextBlock Grid.Column="1" Text="⚡"
                       Foreground="White" FontSize="20"
                       HorizontalAlignment="Right"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="1"
                       Foreground="White"
                       FontSize="24" FontWeight="Bold"
                       HorizontalAlignment="Right"/>
                    </Grid>
                </Border>

            </UniformGrid>
        </ScrollViewer>
    </Grid>
</Window>
