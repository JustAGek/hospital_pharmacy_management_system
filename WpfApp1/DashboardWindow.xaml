<Window x:Class="WpfApp1.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource AppBackground}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <Border Grid.Column="0" Background="{StaticResource SidebarBackground}">
            <StackPanel>

                <!-- User header -->
                <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,24,0,16">
                    <Ellipse Width="32" Height="32"
                   Fill="{StaticResource AccentBrush}"/>
                    <TextBlock x:Name="UserNameText" Text="Full Name"
                     Foreground="{StaticResource SidebarText}"
                     FontSize="16" FontWeight="SemiBold"
                     Margin="8,0,0,0"
                     VerticalAlignment="Center"/>
                    <TextBlock Text="▼"
                     Foreground="{StaticResource SidebarText}"
                     Margin="4,0,0,0"
                     VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Nav buttons -->
                <StackPanel>
                    <Button Style="{StaticResource NavButtonStyle}" Tag="Selected">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="🏠" FontSize="16"/>
                            <TextBlock Text=" Dashboard" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource NavButtonStyle}"
                  Click="ManageUsersButton_Click">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="👥" FontSize="16"/>
                            <TextBlock Text=" Manage Users" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource NavButtonStyle}"
                  Click="PatientsButton_Click">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="🧑‍⚕️" FontSize="16"/>
                            <TextBlock Text=" Patients" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource NavButtonStyle}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="💊" FontSize="16"/>
                            <TextBlock Text=" Medicine" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <!-- ... additional nav items ... -->
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- MAIN CONTENT -->
        <Grid Grid.Column="1" Margin="24">
            <!-- Place your 2×3 cards and charts here -->
        </Grid>
    </Grid>
</Window>
