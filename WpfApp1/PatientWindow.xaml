<Window x:Class="WpfApp1.PatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Patient Management" Height="500" Width="800"
        WindowStartupLocation="CenterScreen">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Form -->
            <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                <TextBlock Text="Add New Patient" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                <UniformGrid Columns="3" Rows="1" Margin="0,0,0,5">
                    <StackPanel Margin="5">
                        <TextBlock Text="Full Name"/>
                        <TextBox x:Name="PatientFullNameTextBox"/>
                    </StackPanel>
                    <StackPanel Margin="5">
                        <TextBlock Text="Birth Date"/>
                        <DatePicker x:Name="PatientDOBPicker"/>
                    </StackPanel>
                    <StackPanel Margin="5">
                        <TextBlock Text="Sexual Orientation"/>
                        <ComboBox x:Name="PatientSexualOrientationComboBox">
                            <ComboBoxItem Content="Male"/>
                            <ComboBoxItem Content="Female"/>
                        </ComboBox>
                    </StackPanel>
                </UniformGrid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5,0,0">
                    <Button Content="Save Patient" Width="120" Margin="0,0,10,0" Click="SavePatient_Click"/>
                    <Button Content="Clear" Width="80" Click="CancelPatient_Click"/>
                </StackPanel>

                <!-- Search Bar -->
                <StackPanel Orientation="Horizontal" Margin="0,15,0,0" HorizontalAlignment="Left">
                    <TextBox x:Name="PatientSearchTextBox" Width="200" Height="25" Margin="0,0,5,0" />
                    <Button Content="Search" Click="SearchPatient_Click" Width="80"/>
                    <Button Content="Reset" Click="ResetPatientSearch_Click" Width="80" Margin="5,0,0,0"/>
                </StackPanel>
            </StackPanel>

            <!-- DataGrid -->
            <DataGrid x:Name="PatientListGrid" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False"
                      IsReadOnly="True" Margin="0,10,0,0" Height="300">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="#" Binding="{Binding Index}" Width="40"/>
                    <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="*"/>
                    <DataGridTextColumn Header="Birth Date" Binding="{Binding BirthDate, StringFormat=d}" Width="120"/>
                    <DataGridTextColumn Header="Orientation" Binding="{Binding SexualOrientation}" Width="120"/>
                    <DataGridTemplateColumn Header="Actions" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Delete" Click="DeletePatient_Click"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </ScrollViewer>
</Window>
