<Window x:Class="WpfApp1.MedicinePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Medicine Component" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>

        <!-- Product Form -->
        <Border Background="#F4F4F4" CornerRadius="8" Padding="20" Margin="10">
            <StackPanel>
                <TextBlock Text="Product Form" FontSize="18" FontWeight="Bold" Margin="0,0,0,20" />

                <TextBlock Text="Medicine type" Margin="0,0,0,5" />
                <ComboBox x:Name="MedicineTypeComboBox" Margin="0,0,0,15" />

                <TextBlock Text="Medicine in english" Margin="0,0,0,5" />
                <TextBox x:Name="NameEnTextBox" Margin="0,0,0,15" />

                <TextBlock Text="Medicine in arabic" Margin="0,0,0,5" />
                <TextBox x:Name="NameArTextBox" Margin="0,0,0,15" />

                <TextBlock Text="Description" Margin="0,0,0,5" />
                <TextBox x:Name="UseTextBox" Margin="0,0,0,15" AcceptsReturn="True" Height="60" />

                <TextBlock Text="Price" Margin="0,0,0,5" />
                <TextBox x:Name="PriceBoxTextBox" Margin="0,0,0,15" />

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,20">
                    <TextBlock Text="Available" VerticalAlignment="Center" Margin="0,0,10,0" />
                    <ToggleButton x:Name="AvailableCheckBox" Width="40" Height="20" Background="#3498DB" IsChecked="True" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="حفظ" Margin="5" Padding="10,4" Background="#2980B9" Foreground="White" Click="SaveMedicine_Click"/>
                    <Button Content="Cancel" Margin="5" Padding="10,4" Background="#BDC3C7" Foreground="Black" Click="CancelMedicine_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Product List -->
        <StackPanel Grid.Column="1">
            <TextBlock Text="Product List" FontSize="18" FontWeight="Bold" Margin="10" />
            <DataGrid x:Name="MedicineListGrid" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" Margin="10"
                      HeadersVisibility="Column" RowHeight="35" FontSize="14" HorizontalScrollBarVisibility="Auto">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="#" Binding="{Binding Index}" Width="40"/>
                    <DataGridTextColumn Header="Category" Binding="{Binding MedicineType}" Width="*"/>
                    <DataGridTemplateColumn Header="Product Info" Width="2*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding NameEn}" FontWeight="Bold"/>
                                    <TextBlock Text="Price: {Binding PricePerBox}" />
                                    <TextBlock Text="Status: {Binding Availability}" />
                                    <TextBlock Text="Description: {Binding Use}" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Action" Width="140">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="Edit" Padding="5,2" Background="#2980B9" Foreground="White" Margin="5,0" Click="EditMedicine_Click"/>
                                    <Button Content="Delete" Padding="5,2" Background="#E74C3C" Foreground="White" Margin="5,0" Click="DeleteMedicine_Click"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
