<Window x:Class="WpfApp1.MedicineWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Medicine" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource AppBackground}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <!-- nav -->
            <ColumnDefinition Width="*"/>
            <!-- content -->
        </Grid.ColumnDefinitions>

        <!-- LEFT NAV -->
        <Border Grid.Column="0"
            Background="{StaticResource SidebarBackground}">
            <StackPanel Margin="0,20">

                <TextBlock Text="PHARMACY"
                   Foreground="{StaticResource SidebarText}"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="10"
                   HorizontalAlignment="Center"/>

                <Button Style="{StaticResource NavButtonStyle}"
                Click="MedicineList_Click" Margin="0,5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="💊" FontSize="16"/>
                        <TextBlock Text=" Medicine List" Margin="8,0,0,0"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource NavButtonStyle}"
                Click="AddMedicine_Click" Margin="0,5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="➕" FontSize="16"/>
                        <TextBlock Text=" Add Medicine" Margin="8,0,0,0"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource NavButtonStyle}"
                Click="Categories_Click" Margin="0,5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📂" FontSize="16"/>
                        <TextBlock Text=" Categories" Margin="8,0,0,0"/>
                    </StackPanel>
                </Button>

            </StackPanel>
        </Border>

        <!-- MAIN CONTENT -->
        <Grid Grid.Column="1" Margin="20">
            <DockPanel LastChildFill="True" Margin="0,0,0,10">
                <TextBlock Text="MEDICINE LIST"
                   FontSize="24"
                   FontWeight="Bold"
                   DockPanel.Dock="Left"/>
                <Button Content="Add Medicine"
                Style="{StaticResource LoginButtonStyle}"
                Width="150"
                Click="AddMedicine_Click"
                DockPanel.Dock="Right"/>
            </DockPanel>

            <DataGrid x:Name="MedicineGrid"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                HeadersVisibility="Column"
                RowHeight="30"
                FontSize="14"
                IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding DisplayName}" Width="2*"/>
                    <DataGridTextColumn Header="Type" Binding="{Binding MedicineType}" Width="*"/>
                    <DataGridTextColumn Header="Box Price" Binding="{Binding PricePerBox, StringFormat=C}" Width="*"/>
                    <DataGridTextColumn Header="Strip Price" Binding="{Binding PricePerStrip, StringFormat=C}" Width="*"/>
                    <DataGridTemplateColumn Header="Quantity" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Quantity}" VerticalAlignment="Center"/>
                                    <Button Content="Load" Margin="5,0,0,0" Padding="5,2"
                          Click="LoadStock_Click"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Generic" Binding="{Binding ActiveIngredient}" Width="*"/>
                    <DataGridTextColumn Header="Company" Binding="{Binding Company}" Width="*"/>
                    <DataGridTextColumn Header="Expires" Binding="{Binding ExpiryDate, StringFormat=d}" Width="*"/>
                    <DataGridTemplateColumn Header="Options" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Edit" Padding="5,2" Background="#2ECC71" Foreground="White"
                          Margin="0,0,5,0" Click="EditMedicine_Click"/>
                                    <Button Content="Delete" Padding="5,2" Background="#E74C3C" Foreground="White"
                          Click="DeleteMedicine_Click"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>
